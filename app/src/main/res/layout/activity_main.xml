<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#FF6600"
    tools:background="#FF6600"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="347dp"
        android:layout_height="319dp">

        <TableRow
            android:id="@+id/linha1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumo total R$:               " />

            <EditText
                android:id="@+id/edt_consumo"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal" />
        </TableRow>

        <TableRow
            android:id="@+id/linha2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Couvert artistico R$:" />

            <EditText
                android:id="@+id/edt_couvert_artistico"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal" />
        </TableRow>

        <TableRow
            android:id="@+id/linha3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dividir conta por:" />

            <EditText
                android:id="@+id/edt_dividir"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/linha4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/bt_calcular"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:background="#DD9910"
                android:clickable="true"
                android:onClick="Calcular"
                android:text="Calcular conta final" />

        </TableRow>

        <TableRow
            android:id="@+id/linha5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxa de serviÃ§o(10%) R$:" />

            <EditText
                android:id="@+id/edt_servico"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:enabled="true" />
        </TableRow>

        <TableRow
            android:id="@+id/linha6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conta total R$:" />

            <EditText
                android:id="@+id/edt_conta_total"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:enabled="true" />
        </TableRow>

        <TableRow
            android:id="@+id/linha7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor por pessoa R$:" />

            <EditText
                android:id="@+id/edt_valor_pessoa"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:enabled="true" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />

</LinearLayout>